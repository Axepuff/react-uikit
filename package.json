{
  "name": "@waves/react-uikit",
  "version": "0.1.1",
  "description": "",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/typings/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/wavesplatform/react-uikit.git"
  },
  "scripts": {
    "test": "jest",
    "start": "start-storybook -p 3001",
    "build": "npm run build:types && npm run build:cjs && npm run build:esm",
    "build:cjs": "rimraf ./dist/cjs && tsc -p ./tsconfigs/tsconfig.cjs.json",
    "build:esm": "rimraf ./dist/esm && tsc -p ./tsconfigs/tsconfig.esm.json",
    "build:types": "rimraf ./dist/typings && tsc -p ./tsconfigs/tsconfig.types.json",
    "build:storybook": "build-storybook -s public -o public/storybook",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint-fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "prepublish": "npm run test && npm run build"
  },
  "devDependencies": {
    "@styled-system/should-forward-prop": "5.1.2",
    "@types/styled-system": "5.1.1",
    "emotion-theming": "^10.0.19",
    "styled-system": "5.1.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "@emotion/core": "10.0.17",
    "@emotion/styled": "10.0.17",
    "@storybook/addon-knobs": "5.2.1",
    "@storybook/addon-storysource": "5.2.1",
    "@storybook/addon-viewport": "5.2.1",
    "@storybook/react": "5.2.0",
    "@testing-library/react": "9.1.4",
    "@types/jest": "24.0.18",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/storybook__react": "4.0.2",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "babel-loader": "8.0.6",
    "eslint": "6.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.17.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "2.0.1",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "jest-emotion": "10.0.17",
    "lint-staged": "9.2.5",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.2",
    "ts-loader": "6.1.0",
    "tslib": "1.10.0",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "@emotion/core": "*",
    "@emotion/styled": "*",
    "emotion-theming": "*",
    "react": "*",
    "react-dom": "*",
    "styled-system": "*",
    "tslib": "*"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfigs/tsconfig.test.json"
      }
    },
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^components/(.*)$": "<rootDir>/src/components/$1",
      "^themes/(.*)$": "<rootDir>/src/themes/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint"
    ]
  },
  "dependencies": {
    "@types/ramda": "^0.26.36",
    "@waves/ts-lib-crypto": "^1.4.1",
    "@waves/ts-types": "^0.3.1",
    "identity-img": "^2.0.0",
    "ramda": "^0.26.1"
  }
}
